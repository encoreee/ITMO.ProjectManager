@model ProjectManager.ViewModels.ChangePasswordViewModel


<div class="intro">
    <div class="intro__inner">
        <h1 class="header-content-title">Admin area > Users > Change password for @Model.Username</h1>
        <div class="register-container">
            <form asp-action="ChangePassword" asp-controller="Users">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <div>
                    <label asp-for="NewPassword">New password</label>
                    <input type="text" asp-for="NewPassword" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
