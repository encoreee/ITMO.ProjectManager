@model IEnumerable<ProjectManager.User>


    <div class="intro">
        <div class="intro__inner">
            <h1 class="header-content-title"> Admin area > Users </h1>
            <div class="admin-area">
                <div class="admin-nav">
                    <table class="table">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Год</th>
                            <th></th>
                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Year</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <a class="admin-nav__link" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                        <a class="admin-nav__link" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                                        <button type="submit">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                    <a class="admin-nav__link" asp-action="Create">Add user</a>
                </div>
            </div>
        </div>
    </div>